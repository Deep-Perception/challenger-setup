#Remove existing symlinks for onboard camera
SUBSYSTEM=="video4linux", ENV{ID_V4L_PRODUCT}=="HP 5MP Camera: HP 5MP Camera", RUN+="/bin/bash -c 'rm -f /dev/v4l/by-id/usb-Quanta_HP*'"
#Create new symlink for 5MP optical camera
SUBSYSTEM=="video4linux", ENV{ID_V4L_PRODUCT}=="HP 5MP Camera: HP 5MP Camera", ENV{ID_V4L_CAPABILITIES}=="*:capture:*", SYMLINK+="v4l/by-id/usb-onboard_camera_%E{ID_SERIAL_SHORT}-video-index0"
